{
    "name": "einenlum/composer-version-parser",
    "description": "A library to extract the potential higher version of a package from Composer requirements",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Einenlum\\ComposerVersionParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Einenlum\\Tests\\ComposerVersionParser\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Einenlum",
            "email": "contact@einenlum.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "unit-test": "phpunit tests",
        "static-analysis": "phpstan",
        "test": [
            "@unit-test",
            "@static-analysis"
        ]
    }
}
